<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopof="parent"
        android:src="@drawable/mv5bnzq1oduzyjktmzrims00odnilwi4nzqtotrin2vlntnmodfjxkeyxkfqcgdeqxvymtkxnjuynq____v1_fmjpg_ux1000_"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/baseline_favorite_border_24"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/across_the_spider_verse" />

    <androidx.cardview.widget.CardView
        android:id="@+id/info_card"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginTop="170dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Movie"
            app:layout_constraintStart_toStartOf="@id/info_card"
            app:layout_constraintTop_toTopOf="@id/info_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>